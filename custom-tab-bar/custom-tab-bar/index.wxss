/* custom-tab-bar/index.wxss */
.tab-bar {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  padding-bottom: env(safe-area-inset-bottom);
  /* background: white; */
  background: radial-gradient(circle, rgb(238, 219, 227) 0%, rgb(200, 215, 231) 100%);
}

.tab-bar-border {
	position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.33);
  transform: scaleY(0.5);
}

.tab-bar-item {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  flex: 1;
  text-align: center;
}

.tab-bar-icon {
  width: 54rpx;
  height: 54rpx;
}

.tab-bar-text {
  font-size: 20rpx;
}
